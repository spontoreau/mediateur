{
  "name": "mediateur",
  "version": "0.1.0",
  "description": "A simple and unambitious library to implement the Mediator design pattern",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "cucumber-js",
    "pretest:ci": "npm run build",
    "test:ci": "cucumber-js --profile ci",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "lint": "eslint --ext .ts --fix src",
    "prepare": "husky install"
  },
  "keywords": [
    "mediator"
  ],
  "author": "Sylvain Pontoreau <pontoreau.sylvain@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/*",
    "!/**/*.steps.js",
    "!/**/*.steps.d.ts",
    "!/**/*.world.js",
    "!/**/*.world.d.ts",
    "!/**/*.world.ts",
    "!/**/setupTest.js",
    "!/**/setupTest.d.ts"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@types/chai": "^4.3.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "chai": "^4.3.7",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
