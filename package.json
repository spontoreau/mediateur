{
  "name": "mediateur",
  "version": "0.0.0",
  "description": "A simple library allowing the implementation of the Mediator design pattern",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/*",
    "!/**/*.test.*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "node --test",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src"
  },
  "keywords": [
    "mediator"
  ],
  "author": "Sylvain Pontoreau <pontoreau.sylvain@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/spontoreau/mediateur.git"
  },
  "bugs": {
    "url": "https://github.com/spontoreau/mediateur/issues"
  },
  "homepage": "https://github.com/spontoreau/mediateur",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/chai": "^5.0.1",
    "@types/node": "^22.9.1",
    "@types/sinon": "^17.0.3",
    "chai": "^5.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "typescript": "^5.6.3"
  }
}
